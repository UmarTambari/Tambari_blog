
generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}


datasource db {
  provider  = "sqlite"
  url       = env("DATABASE_URL")
}


model Author {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  avatar    String?   // optional
  bio       String?   // optional
  blogs     Blog[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Blog {
  id           String          @id @default(cuid())
  slug         String          @unique
  title        String
  summary      String          // main intro / summary text
  image        String
  publishedAt  DateTime        @default(now())
  category     String?
  tags         Tag[]           // many-to-many tags via Tag model
  readTime     Int?
  featured     Boolean         @default(false)
  authorId     String?
  author       Author?         @relation(fields: [authorId], references: [id])
  contentBlocks ContentBlock[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}
 
model Tag {
  id    String @id @default(cuid())
  name  String @unique
  blogs Blog[]
}
 
model ContentBlock {
  id        String   @id @default(cuid())
  type      ContentType
  content   String
  alt       String?    // for images
  language  String?    // for code blocks
  blogId    String
  blog      Blog      @relation(fields: [blogId], references: [id])
  createdAt DateTime  @default(now())
}

enum ContentType {
  heading
  subheading
  text
  image
  code
  quote
}
